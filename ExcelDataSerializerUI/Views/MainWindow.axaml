<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ExcelDataSerializerUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="ExcelDataSerializerUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        SizeToContent="WidthAndHeight"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>
    
    <StackPanel>
        <Border BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="3"
                Margin="10" Padding="10">
            <Grid ShowGridLines="False"
                  ColumnDefinitions="100, Auto, Auto"
                  RowDefinitions="Auto, Auto, Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0">Excel Í≤ΩÎ°ú</Label>
                <Button Grid.Row="0" Grid.Column="1" Click="OnOpenExcelFolder">üìÇ</Button>
                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding ExcelPath}" HorizontalAlignment="Stretch"/>
                
                <Label Grid.Row="2" Grid.Column="0">C#</Label>
                <Button Grid.Row="2" Grid.Column="1" Click="OnOpenCsOutputFolder">üìÇ</Button>
                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CsOutputPath}" HorizontalAlignment="Stretch"/>
                
                <Label Grid.Row="3" Grid.Column="0">Data</Label>
                <Button Grid.Row="3" Grid.Column="1" Click="OnOpenDataOutputFolder">üìÇ</Button>
                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding DataOutputPath}" HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>
        <Border BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="3"
                Margin="10" Padding="10">
            <DockPanel>
                <!-- <Button Click="OnOpenExcelFolder">Excel Ìè¥Îçî ÏÑ†ÌÉù</Button> -->
                <!-- <Button Click="OnOpenSaveFolder">Ï†ÄÏû• Ìè¥Îçî ÏÑ†ÌÉù</Button> -->
                <Button Click="OnExecute">Ïã§Ìñâ</Button>
            </DockPanel>
        </Border>
        <Border BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="3"
                Margin="10" Padding="10">
            <StackPanel>
                <TextBlock>XLSX Library</TextBlock>
                <RadioButton GroupName="xlsx-library-select" Content="XlsxHelper" Click="OnSelectXlsxHelper" IsChecked="True"/>
                <RadioButton GroupName="xlsx-library-select" Content="ClosedXML" Click="OnSelectClosedXml"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="3"
                Margin="10" Padding="10"
                VerticalAlignment="Stretch">
            <ScrollViewer AllowAutoHide="True"
                          VerticalScrollBarVisibility="Auto"
                          VerticalAlignment="Stretch"
                          MaxHeight="500">
                <SelectableTextBlock Text="{Binding Log}"></SelectableTextBlock>
            </ScrollViewer>
        </Border>
    </StackPanel>
</Window>